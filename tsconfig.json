{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "rootDir": "./src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true
   },
   "ts-node": {
      "esm": true
  },
  "include": [
   "./src/**/*.ts"
  ]
}